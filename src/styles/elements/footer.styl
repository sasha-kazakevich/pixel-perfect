.footer
  background-color #212429
  color #fff

  width 100%
  height 410px

.footer--wrapper
  padding 53px 0 33px

.footer-block
  width 361px

  h4
    font-family 'Montserrat-Bold'
    text-transform uppercase
    font-size 16px
    line-height 1.75
    letter-spacing .6px
    margin-bottom 28px

  &--lists
    margin 0
    padding 0

    li
      font-size 15px

  &--tweet
    display flex
    margin-bottom 26px

    span
      margin-right 10px

  &--tweet-name
    margin-bottom 13px
    letter-spacing .8px

  &--info
    font-size 15px
    letter-spacing 1.4px
    line-height 25px
    margin-bottom 5px

  &--lists__insta
    li
      display inline-block
      padding 0 1px 1px 0
      font-size 0

  &--lists__comment
    li:first-child
      margin-bottom 28px
      border 1px solid #65676a
      border-width 0 0 1px 0

  &--comment
    font-family 'Open Sans'
    font-size 14px
    line-height 24px
    letter-spacing 1.5px
    padding-bottom 26px

  &--comment__name
    padding 0
    line-height 13px
    letter-spacing 1.8
    margin-bottom 13px


.footer-copy
  background-color #17191c

.content-footer
  background-color #17191c
  text-align center

  p
    text-transform uppercase
    color #929293
    line-height 24px
    letter-spacing 1.9px
    padding 7px 0
