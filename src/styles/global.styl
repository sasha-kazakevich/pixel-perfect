*
  box-sizing border-box

body
  background-color #f9f9fb
    
  font-family 'Hind-Light'
  font-size 14px

ul
  margin 0
  padding 0
  font-size 0

  li
    list-style none

p,h2,h3,h4
  margin 0
  padding 0

.content
  width 1530px
  margin 0 auto

  &--wrapper
    display flex
    justify-content space-between
    align-items flex-start
    background-color #212429
